<h1 class="text-center mb-4">New Game</h1>
<h2 class="text-center mb-4">Your grid is:</h2>
<h3 class="text-center">
  <% @grid.each do |letter| %>
    <span class="badge bg-primary fs-4 p-2 m-1"><%= letter %></span>
  <% end %>
</h3>

<div class="container mt-5">
  <h3>What is the longest word you can find?</h3>
  <form action="score" method="post" class="form-inline" data-turbo="false">
    <div class="input-group">
      <input type="text" name="word" class="form-control" placeholder="Write here your word">
      <div class="input-group-append">
        <button class="btn btn-primary" type="submit">Play</button>
      </div>
    </div>
    <%= hidden_field_tag :grid, @grid %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
